{
  "name": "devbox",
  "version": "0.7.1",
  "description": "Local-first dev containers with remote sync",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoorXLabs/DevBox.git"
  },
  "bugs": {
    "url": "https://github.com/NoorXLabs/DevBox/issues"
  },
  "homepage": "https://github.com/NoorXLabs/DevBox#readme",
  "keywords": ["devbox", "devcontainer", "docker", "remote-development", "sync", "mutagen", "cli"],
  "license": "Apache-2.0",
  "author": "Noor Chasib",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "devbox": "./bin/devbox"
  },
  "scripts": {
    "prepare": "lefthook install",
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile=devbox-bin",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src",
    "check": "biome check --write ./src",
    "check:ci": "biome check ./src",
    "vendor:mutagen": "bash scripts/download-mutagen.sh",
    "build:bundle": "bun run vendor:mutagen && bun build ./src/index.ts --compile --outfile=devbox-bin",
    "docs:dev": "cd docs && bun run dev",
    "docs:build": "cd docs && bun run build",
    "docs:preview": "cd docs && bun run preview"
  },
  "dependencies": {
    "argon2": "0.44.0",
    "chalk": "5.6.2",
    "commander": "14.0.3",
    "execa": "9.6.1",
    "inquirer": "13.2.2",
    "ora": "9.1.0",
    "tar": "7.5.7",
    "yaml": "2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/bun": "1.3.8",
    "@types/inquirer": "9.0.9",
    "@types/tar": "6.1.13",
    "lefthook": "2.0.16",
    "typescript": "5.9.3"
  }
}
