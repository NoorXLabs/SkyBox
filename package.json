{
  "name": "skybox",
  "version": "0.8.3",
  "description": "Local-first dev containers with remote sync",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoorXLabs/SkyBox.git"
  },
  "bugs": {
    "url": "https://github.com/NoorXLabs/SkyBox/issues"
  },
  "homepage": "https://github.com/NoorXLabs/SkyBox#readme",
  "keywords": ["skybox", "devcontainer", "docker", "remote-development", "sync", "mutagen", "cli"],
  "license": "Apache-2.0",
  "author": "Noor Chasib",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "skybox": "./bin/skybox"
  },
  "scripts": {
    "prepare": "lefthook install",
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile=skybox-bin",
    "test": "bun test --preload ./tests/helpers/test-utils.ts tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/e2e",
    "test:all": "bun test --preload ./tests/helpers/test-utils.ts tests",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write ./src ./tests",
    "lint": "biome lint --write ./src ./tests",
    "check": "biome check --write ./src ./tests",
    "check:ci": "biome check ./src ./tests",
    "vendor:mutagen": "bash scripts/download-mutagen.sh",
    "build:bundle": "bun run vendor:mutagen && bun build ./src/index.ts --compile --outfile=skybox-bin",
    "docs:dev": "cd docs && bun run dev",
    "docs:build": "cd docs && bun run build",
    "docs:preview": "cd docs && bun run preview"
  },
  "dependencies": {
    "argon2": "0.44.0",
    "chalk": "5.6.2",
    "commander": "14.0.3",
    "execa": "9.6.1",
    "ink": "6.6.0",
    "inquirer": "13.2.2",
    "ora": "9.3.0",
    "react": "19.2.4",
    "tar": "7.5.7",
    "yaml": "2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/bun": "1.3.8",
    "@types/inquirer": "9.0.9",
    "@types/react": "19.2.13",
    "@types/tar": "6.1.13",
    "lefthook": "2.1.0",
    "react-devtools-core": "7.0.1",
    "typescript": "5.9.3"
  }
}
